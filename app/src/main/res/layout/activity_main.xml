<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pro100vnik.githubexplorer.activities.MainActivity"
    android:background="@color/githubGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/githublogo"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/githubBlackDark"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:textSize="24sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/by_pro100vnik"
            android:textColor="@color/githubBlackLight"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:textSize="16sp"/>
    </LinearLayout>


</RelativeLayout>
